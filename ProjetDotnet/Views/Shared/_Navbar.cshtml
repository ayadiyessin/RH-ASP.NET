<!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Accueil </a>
      </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
      
      
      <!-- Notifications Dropdown Menu -->
      <li class="nav-item dropdown">
        <a class="nav-link" data-toggle="dropdown" href="#">
          <i class="far fa-bell"></i>
                <span class="badge badge-warning navbar-badge">@{
                        int nb =context.Conges.Where(x => x.date_env_conge == DateTime.Now.Date && x.confirmation_conge==0).Count();
                    } @nb</span>
        </a>
            @if (nb > 0)
            {
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    <span class="dropdown-header">@nb Notifications</span>
                  <div class="dropdown-divider"></div>
                  <a asp-area="" asp-controller="Conge" asp-action="Index" class="dropdown-item">
                      <i class="fas fa-address-card mr-2"></i>
                        @nb Nouvelles demandes de congés
                  </a>
                </div>
            }
      </li>
      <li class="nav-item">
        <a class="nav-link" data-widget="fullscreen" href="#" role="button">
          <i class="fas fa-expand-arrows-alt"></i>
        </a>
      </li>
    </ul>
  </nav>
