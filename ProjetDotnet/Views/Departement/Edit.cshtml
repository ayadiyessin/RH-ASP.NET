@model ProjetDotnet.Models.Departement

@{
    ViewData["Title"] = "Modifier Département";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Liste des Départements</h1>

                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Accueil </a></li>
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Departement" asp-action="Index">Liste des départements </a></li>
                        <li class="breadcrumb-item active">Modifier département</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <!-- /.row -->
            <div class="row">
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Modifier Département</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id_dep" />
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Nom_dep" class="control-label">Nom</label>
                                    <input asp-for="Nom_dep" class="form-control" type="text" placeholder="Enter nom" />
                                    <span asp-validation-for="Nom_dep" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="description_dep" class="control-label">Description</label>
                                    <textarea asp-for="description_dep" class="form-control" rows="3" placeholder="Enter ..."></textarea>
                                    <span asp-validation-for="Nom_dep" class="text-danger"></span>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <a class="btn btn-outline-secondary " asp-controller="Departement" asp-action="Index">Retour</a>
                                <button type="submit" value="Create" class="btn btn-outline-primary float-right">Modifier</button>
                            </div>
                        </form>
                        <span class="bg-danger text-white">@ViewBag.error</span>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
