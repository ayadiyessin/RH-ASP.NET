@model ProjetDotnet.Models.Departement

@{
    ViewData["Title"] = "Archiver Département";
}

<div id="deleteModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="depArchiver">
                <input type="hidden" asp-for="Id_dep" />
                <input type="hidden" asp-for="Nom_dep" />
                <input type="hidden" asp-for="description_dep" />
                <div class="modal-header">
                    <h5 class="modal-title">Confirmer l'archivation</h5>
                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <p>Voulez-vous vraiment archiver le département "@Model.Nom_dep" ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Annuler</button>

                    <input type="submit" value="Archiver" class="btn btn-outline-danger float-right" />

                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
