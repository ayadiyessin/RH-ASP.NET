@model ProjetDotnet.Models.Formation

@{
    ViewData["Title"] = "Desarchiver Formation";
}

<div id="deleteModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="FormDesarchive">
                <input type="hidden" asp-for="Id_formation" />
                <input type="hidden" asp-for="nom_formation" />
                <input type="hidden" asp-for="description_formation" />
                <div class="modal-header">
                    <h5 class="modal-title">Confirmer la Désarchivation</h5>
                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <p>Voulez-vous vraiment désarchiver cet formation "@Model.nom_formation" ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Annuler</button>

                    <input type="submit" value="Désarchiver" class="btn btn-outline-danger float-right" />

                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
